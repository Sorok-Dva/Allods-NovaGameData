<?xml version="1.0" encoding="UTF-8" ?>
<BuffVisScripts>
	<action type="CreatureAnimationAction">
		<mode>LOOP</mode>
		<animations>
			<Item>sleep</Item>
		</animations>
		<channel>CHANNEL_DEATH</channel>
		<channelOverrideMode>OVERRIDE_DEFAULT</channelOverrideMode>
		<advanced>
			<eventPlaybackEnd>false</eventPlaybackEnd>
			<animationKeysAction />
		</advanced>
	</action>
	<postAction type="CreatureAnimationAction">
		<mode>DIE</mode>
		<animations>
			<Item>sleepUp</Item>
		</animations>
		<channel>CHANNEL_KNOCKDOWN</channel>
		<channelOverrideMode>OVERRIDE_IGNORE</channelOverrideMode>
		<advanced>
			<eventPlaybackEnd>false</eventPlaybackEnd>
			<animationKeysAction />
		</advanced>
	</postAction>
</BuffVisScripts>
