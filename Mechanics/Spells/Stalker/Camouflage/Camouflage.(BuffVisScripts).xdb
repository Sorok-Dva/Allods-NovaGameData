<?xml version="1.0" encoding="UTF-8" ?>
<BuffVisScripts>
	<action type="VisActionList">
		<elements>
			<Item type="CreatureSetTransparencyAction">
				<transparency>0.5</transparency>
			</Item>
			<Item type="CreatureReplaceAnimationsAction">
				<visActionID />
				<onTop>
					<Item>
						<oldAnimation>run</oldAnimation>
						<newAnimation>sneak</newAnimation>
					</Item>
				</onTop>
				<onBottom>
					<Item>
						<oldAnimation>run</oldAnimation>
						<newAnimation>sneak</newAnimation>
					</Item>
				</onBottom>
			</Item>
			<Item type="CreatureReplaceAnimationsAction">
				<onTop>
					<Item>
						<oldAnimation>idle</oldAnimation>
						<newAnimation>idleSneak</newAnimation>
					</Item>
				</onTop>
				<onBottom>
					<Item>
						<oldAnimation>idle</oldAnimation>
						<newAnimation>idleSneak</newAnimation>
					</Item>
				</onBottom>
			</Item>
		</elements>
	</action>
	<postAction />
</BuffVisScripts>
