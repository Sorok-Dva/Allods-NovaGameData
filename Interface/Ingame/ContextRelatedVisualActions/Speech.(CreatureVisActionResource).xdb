<?xml version="1.0" encoding="UTF-8" ?>
<CreatureVisActionResource>
	<action type="VisActionList">
		<elements>
			<Item type="VisActionDelay">
				<time>1000</time>
			</Item>
			<Item type="CreatureAnimationAction">
				<animations>
					<Item>emoteSpeech</Item>
				</animations>
				<channel>CHANNEL_EMOTE_SPECIAL</channel>
				<channelOverrideMode>OVERRIDE_STOP</channelOverrideMode>
				<channelOverrideControllers>DEFAULT_CONTROLLERS</channelOverrideControllers>
				<advanced>
					<stopIfMoved>true</stopIfMoved>
					<turnToTarget>BEFORE_ANIMATIONEND</turnToTarget>
					<skipIfFixedIdleAnimation>true</skipIfFixedIdleAnimation>
				</advanced>
			</Item>
		</elements>
		<stopOnDeath>false</stopOnDeath>
	</action>
</CreatureVisActionResource>
