<?xml version="1.0" encoding="UTF-8" ?>
<SpellVisScripts>
	<Header>
		<Variables>
			<ReadyAnimationBody>readySpell</ReadyAnimationBody>
			<Ge>0</Ge>
			<ReadyAnimationHands>readySpell</ReadyAnimationHands>
			<FxExplosion>/Spells/FX/Spells/HitLightning.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)</FxExplosion>
			<FxOnHands>/Spells/FX/Spells/ReadySpellDirectLightning.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)</FxOnHands>
			<FxProjectile />
		</Variables>
	</Header>
	<actionBarStart type="VisActionList">
		<play>Simultaneously</play>
		<elements>
			<Item type="CreatureAnimationAction">
				<visActionID />
				<mode>LOOP</mode>
				<use>USE_ANIMATIONS</use>
				<animations>
					<Item var="ReadyAnimationHands" />
				</animations>
				<channel>CHANNEL_DEFAULT</channel>
				<channelOverrideMode>OVERRIDE_DEFAULT</channelOverrideMode>
				<channelOverrideScript />
				<specialController>Left</specialController>
				<advanced>
					<speed>0</speed>
					<backgroundAfterFirstKey>false</backgroundAfterFirstKey>
					<offendType>NO_OFFEND</offendType>
					<autoHasten>
						<mode>AUTOHASTEN_NONE</mode>
						<timeToBeLeft>0</timeToBeLeft>
					</autoHasten>
					<eventPlaybackEnd>false</eventPlaybackEnd>
				</advanced>
			</Item>
		</elements>
	</actionBarStart>
	<wholeCasting type="CreatureEffectsAction">
		<visualEffects>
			<Item>
				<locator>Slot_Hand_L</locator>
				<effectFx hrefvar="FxOnHands" />
			</Item>
			<Item>
				<locator>Slot_Hand_R</locator>
				<effectFx hrefvar="FxOnHands" />
			</Item>
			<Item>
				<locator>Slot_Global</locator>
				<effectFx href="/Spells/FX/Spells/ReadySpellDirect01Down.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)" />
			</Item>
		</visualEffects>
	</wholeCasting>
	<launch type="VisActionList">
		<play>InSequence</play>
		<elements>
			<Item type="CreatureAnimationAction">
				<animations>
					<Item>spellCastDirected</Item>
				</animations>
				<advanced>
					<backgroundAfterFirstKey>true</backgroundAfterFirstKey>
					<autoHasten>
						<mode>AUTOHASTEN_NONE</mode>
						<timeToBeLeft>500</timeToBeLeft>
					</autoHasten>
					<eventPlaybackEnd>true</eventPlaybackEnd>
				</advanced>
			</Item>
			<Item type="CreatureVisActionStartThrow" />
			<Item type="CreatureEffectsOnTarget">
				<visualEffects>
					<Item>
						<delay>0</delay>
						<locator>Slot_FX</locator>
						<effectFx href="/Spells/FX/Spells/HitLightning.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)" />
						<offendTime type="EffectOffendConstDelay" />
					</Item>
				</visualEffects>
			</Item>
		</elements>
	</launch>
</SpellVisScripts>
