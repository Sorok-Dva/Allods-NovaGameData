<?xml version="1.0" encoding="UTF-8" ?>
<SpellVisScripts>
	<launch type="VisActionList">
		<play>InSequence</play>
		<elements>
			<Item type="CreatureSetFlagAction">
				<flagName>Flag_MountNeeded</flagName>
				<timeOut>0.5</timeOut>
			</Item>
			<Item type="VisActionList">
				<playWhile type="PredicateCreatureFlagAction">
					<flagName>Flag_Emote</flagName>
				</playWhile>
				<elements>
					<Item type="VisActionDelay">
						<time>500</time>
					</Item>
				</elements>
			</Item>
			<Item type="VisActionList">
				<play>Simultaneously</play>
				<elements>
					<Item type="CreatureVisObjectComponentsAction">
						<member>Mount</member>
						<visObjComponents>
							<Item type="AttachedVisObjectComponent">
								<visObject href="/Spells/FX/Mobs/MountManaBike_Energize.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)" />
								<locatorName>Engine_L</locatorName>
							</Item>
							<Item type="AttachedVisObjectComponent">
								<visObject href="/Spells/FX/Mobs/MountManaBike_Energize.(VisObjectTemplate).xdb#xpointer(/VisObjectTemplate)" />
								<rotation z="1" w="0" />
								<locatorName>Engine_R</locatorName>
							</Item>
						</visObjComponents>
					</Item>
					<Item type="Sound3DAction">
						<sound>
							<project href="/SFX/Spells/Sounds.(FMODProject).xdb#xpointer(/FMODProject)" />
							<name>spells/Mount/MountManaBike/MountManaBike_Energize</name>
						</sound>
					</Item>
				</elements>
			</Item>
		</elements>
	</launch>
</SpellVisScripts>
